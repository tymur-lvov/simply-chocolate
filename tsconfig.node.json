{
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Paths */
    "baseUrl": "./",
    "paths": {
      "@types": ["@types/node/index.types.ts"],
      "@config": ["node/config.ts"],
      "@constants": ["node/constants.ts"],
      "@helpers": ["node/helpers/index.ts"]
    }
  },
  "include": ["@types", "node", "vite.config.ts"]
}
