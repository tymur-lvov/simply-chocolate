{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES6",
    "lib": ["ES2023"],
    "module": "ES6",
    "skipLibCheck": true,
    "outDir": "./dist",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Paths */
    "paths": {
      "@types": ["./@types/node/generateIndexFiles/index.types.ts"],
      "@config": ["./node/generateIndexFiles/config.json"],
      "@constants": ["./node/generateIndexFiles/constants.ts"],
      "@helpers": ["./node/generateIndexFiles/helpers/index.ts"]
    }
  },
  "include": ["node", "vite.config.ts"]
}
